<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heroxin.system.mapper.internship.InternshipTeacherMapper">
    
    <resultMap type="InternshipTeacher" id="InternshipTeacherResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="collegeId"    column="college_id"    />
        <result property="sex"    column="sex"    />
        <result property="birthday"    column="birthday"    />
        <result property="tel"    column="tel"    />
    </resultMap>

    <sql id="selectInternshipTeacherVo">
        select id, name, college_id, sex, birthday, tel from internship_teacher
    </sql>

    <select id="selectInternshipTeacherList" parameterType="InternshipTeacher" resultMap="InternshipTeacherResult">
        <include refid="selectInternshipTeacherVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="collegeId != null "> and college_id = #{collegeId}</if>
            <if test="sex != null  and sex != ''"> and sex = #{sex}</if>
            <if test="birthday != null "> and birthday = #{birthday}</if>
            <if test="tel != null  and tel != ''"> and tel = #{tel}</if>
        </where>
    </select>
    
    <select id="selectInternshipTeacherById" parameterType="Long" resultMap="InternshipTeacherResult">
        <include refid="selectInternshipTeacherVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertInternshipTeacher" parameterType="InternshipTeacher">
        insert into internship_teacher
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="collegeId != null">college_id,</if>
            <if test="sex != null">sex,</if>
            <if test="birthday != null">birthday,</if>
            <if test="tel != null">tel,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="collegeId != null">#{collegeId},</if>
            <if test="sex != null">#{sex},</if>
            <if test="birthday != null">#{birthday},</if>
            <if test="tel != null">#{tel},</if>
         </trim>
    </insert>

    <update id="updateInternshipTeacher" parameterType="InternshipTeacher">
        update internship_teacher
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="collegeId != null">college_id = #{collegeId},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="birthday != null">birthday = #{birthday},</if>
            <if test="tel != null">tel = #{tel},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteInternshipTeacherById" parameterType="Long">
        delete from internship_teacher where id = #{id}
    </delete>

    <delete id="deleteInternshipTeacherByIds" parameterType="String">
        delete from internship_teacher where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>